/* pages/food/food.wxss */
page{
  width: 100%;
  min-height: 100%;
}
.title-msg{
  width: 100%;
  height: 70rpx;
  line-height: 70rpx;
  font-size: 30rpx;
  color: orange;
  box-shadow: 5rpx 1rpx 3rpx skyblue;
  padding-left: 30rpx;
}
.food-container{
  width: 100%;
  min-height: 100%;
  background: #fafafa;
  overflow: hidden;
}
.food-logo{
  width: 350rpx;
  height: 200rpx;
  margin-left: auto;
  margin-right: auto;
  border-radius: 50%;
  margin-top: 50rpx;
  transform: scale3d(0.8,0.8,0.8);
  transition: all .5s ease;
}
.food-logo image{
  width: 100%;
  height: 100%;
  border-radius: 50%;
  position: relative;
  
}
.change-food{
  width: 100%;
  height: auto;
  display: flex;
  margin-top: 50rpx;
  position: relative;
  transition: all .3s ease;
}
.none{
  transform: translate(-100%,0);
}
.block{
  transform: translate(0,0);
}
.rotate1{
  transform: scale3d(1.2,1.2,1.2);
}
.food-left{
  flex-basis: 30%;
  height: 800rpx;
  background: rgba(123, 212, 1, .2);
  position: absolute;
  left: 0;
  top: 0;
  overflow-y: scroll;
  border-radius: 10rpx;
}
.food-right{
  flex: 1;
  height: 800rpx;
  overflow-y: scroll;
  background: #eee;
  /* display: flex;
  flex-wrap: wrap;
  justify-content: space-between; */
  padding-left: 26%;
}
.left-item{
  width: 100%;
  height: 95rpx;
  line-height: 95rpx;
  color: orange;
  text-align: center;
  border-bottom: 1rpx dashed orange;
  font-size: 28rpx;
}
.bg{
  background: #fff;
  border-bottom: none;
  border-radius: 10rpx;
  transition: all .3s ease;
  animation: move .5s linear;
}
.right-item{
  font-size: 24rpx;
  width: 33%;
  height: 175rpx;
  float: left;
  background: rgba(23, 2, 1, .2);
  color: #fff;
  border-bottom: 1rpx dotted #ccc;
  margin-bottom: 5rpx;
  border-right: 1rpx solid #fff;
  border-radius: 10rpx;
  transition: all .3s ease;
  position: relative;
  /* animation: move .5s linear; */
}
.hot-img{
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  right: -3rpx;
  bottom: 5rpx;
  z-index: 1;
}
.hot-img image{
  width: 100%;
  height: 100%;
}
.right-item view{
  margin-top: 10rpx;
  text-align: center;
}
.money text{
  width: 100%;
  /* display: block; */
}
.price{
  color: yellow;
  margin-left: 9rpx;
}
.order{
  width: 90%;
  height: 88rpx;
  line-height: 88rpx;
  background: orange;
  text-align: center;
  font-size: 36rpx;
  margin-left: auto;
  margin-right: auto;
  color: #fff;
  border-radius: 10rpx;
  margin-top: 20rpx;
}
.bgWhite{
  border-radius: 10rpx;
  transition: all .3s ease;
  animation: move .5s linear;
  background: skyblue;
}
.recommend{
  color: rosybrown;
  margin-left: 9rpx;
}
.food-list{
  width: 100%;
  height: auto;
  margin-top: 15rpx;
}
.list-change{
  width: 100%;
  height: 50rpx;
  line-height: 50rpx;
  padding-left: 15rpx;
  font-size: 36rpx;
  color: #dadada;
  margin-top: 15rpx;
}
.seleted-list{
  width: 97%;
  height: 70rpx;
  box-shadow: 0 10rpx 1rpx 1rpx #dadada;
  padding-left: 15rpx;
  margin-top: 20rpx;
  border-radius: 10rpx;
  font-size: 24rpx;
  line-height: 70rpx;
  color: slategray;
  display: flex;
  justify-content: space-around;
  margin-left: auto;
  margin-right: auto;
}

.all-price{
  width: 100%;
  height: 50rpx;
  padding-left: 15rpx;
  margin-top: 25rpx;
  font-size: 38rpx;
  color: orange;
}
.top400{
  position: relative;
  top: -800rpx;
}
.casual{
  width: 100%;
  height: 100rpx;
  padding-left: 15rpx;
  line-height: 100rpx;
  text-align: center;
}
.opcaty{
  opacity: 0;
  transition: all .2s ease;
}
.box-casual{
  /* display: flex; */
  /* display: flex;
  justify-content: space-evenly;
  padding-left: 30rpx;
  padding-right: 30rpx; */
}
@keyframes move{
  0%{transform: scale3d(0,0,0)}
  50%{transform: scale3d(1,1,1)}
  100%{transform: scale3d(0,0,0)}
}
@keyframes rotateA{
  0%{transform: rotate3d(100deg,100deg,100deg)}
  50%{transform: rotate3d(300deg,300deg,300deg)}
  100%{transform: rotate3d(0deg,0deg,0deg)}
}
.btn {
  width: 199rpx;
  height: 75rpx;
  /* background: lime; */
  border: 1rpx dashed #ccc;
  border-radius: 50rpx;
  position: relative;
  margin-left: auto;
  margin-right: auto;
}

.btn>view {
  font-size: 20rpx;
  text-align: center;
  line-height: 75rpx;
}

.btn-cilcle {
  position: absolute;
  width: 75rpx;
  height: 75rpx;
  background: red;
  border-radius: 50rpx;
  transition: all 0.5s ease;
}

.right {
  animation: myfirst 1s ease;
  left: 120rpx;
}

.left {
  animation: myfirst2 1s ease;
  left: 0;
}

.rightBG {
  background: limegreen;
  transition: all 0.5s ease;
}

.leftBG {
  background: #f1f1f1;
  transition: all 0.5s ease;
}

@keyframes myfirst {
  10% {
    transform: rotate(130deg);
  }

  100% {
    transform: rotate(700deg);
  }
}

@keyframes myfirst2 {
  10% {
    transform: rotate(-130deg);
  }

  100% {
    transform: rotate(-700deg);
  }
}
